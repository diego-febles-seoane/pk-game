<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1000.0" prefWidth="1600.0" styleClass="background" stylesheets="@CSS/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.diegofeblesseoane.pkgame.backend.controller.ResultadosController">
   <children>
      <!-- Título -->
      <Label fx:id="labelTitulo" layoutX="550.0" layoutY="50.0" styleClass="title" text="🏆 RESULTADOS DEL COMBATE" textAlignment="CENTER">
         <font>
            <Font size="42.0" />
         </font>
      </Label>
      
      <!-- Resultado principal -->
      <VBox alignment="CENTER" layoutX="650.0" layoutY="150.0" spacing="20.0">

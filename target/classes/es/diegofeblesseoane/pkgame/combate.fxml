      <HBox alignment="CENTER" layoutX="200.0" layoutY="450.0" spacing="20.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <Button fx:id="buttonAtaque1" onAction="#onAtaque1Click" prefHeight="60.0" prefWidth="200.0" styleClass="button" text="Ataque 1" visible="false">
